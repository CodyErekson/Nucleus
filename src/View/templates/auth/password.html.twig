{% extends 'app.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-6 cold-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Change Password</div>
                <div class="panel-body">

                    {% if name is defined %}
                        {{ errors | json_encode }}
                    {% endif %}

                    <form action="{{ path_for('auth.password.change') }}" method="post">
                        <div class="form-group{{ errors.current ? ' has-error' : '' }}">
                            <label for="current">Current Password</label>
                            <input type="password" name="current" id="current" class="form-control">
                            {% if errors.current %}
                                <span class="help-block">{{ errors.current | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.confirm ? ' has-error' : '' }}">
                            <label for="confirm">Confirm Password</label>
                            <input type="password" name="confirm" id="confirm" class="form-control">
                            {% if errors.confirm %}
                                <span class="help-block">{{ errors.confirm | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Change</button>
                        {{  csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}