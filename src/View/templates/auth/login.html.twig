{% extends 'app.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-6 cold-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Login</div>
                <div class="panel-body">

                    {% if name is defined %}
                        {{ errors | json_encode }}
                    {% endif %}

                    <form action="{{ path_for('auth.login') }}" method="post">
                        <div class="form-group{{ errors.username ? ' has-error' : '' }}">
                            <label for="username">Username</label>
                            <input type="text" name="username" id="username" class="form-control" value="{{ old.username }}">
                            {% if errors.username %}
                                <span class="help-block">{{ errors.username | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Login</button>
                        {{  csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}